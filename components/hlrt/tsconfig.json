{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "es2022",
    "rootDir": "./src",
    "moduleResolution": "node16",
    "baseUrl": "./",
    "allowJs": true,
    "checkJs": true,
    "outDir": "../../build/hlrt",
    "sourceRoot": "./src",
    "newLine": "lf",
    "inlineSourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
}